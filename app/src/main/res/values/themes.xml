<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotesDroid" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.NotesDroid" parent="Base.Theme.NotesDroid" />


    <!-- For Light Mode -->
    <!-- app background -->
    <style name="SCREEN">
        <item name="android:background">@color/appBackgroundColorLight</item>
    </style>

    <!-- text color -->
    <style name="TEXT">
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <!-- text color for login and signup -->
    <style name="TEXT2">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- add button color -->
    <style name="ADDBUTTON">
        <item name="android:tint">@color/floatingActionButtonColorDark</item>
        <item name="android:textColor">@color/floatingActionButtonColorDark</item>
        <item name="android:backgroundTint">@color/floatingActionButtonColorLight</item>
    </style>

    <!-- login & signup page -->
    <style name="LOGIN">
        <item name="android:background">@drawable/loginbglight</item>
    </style>
    <style name="SIGNUP">
        <item name="android:background">@drawable/signupbglight</item>
    </style>


</resources>